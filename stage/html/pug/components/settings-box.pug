.settings-box.hide-settings
    .toggle-settings 
        i.fa.fa-gear.fa-lg
    .settings-content.text-center
        .option-box.color-options
            h4.option-title Color Options
            - var themes = ["green-theme", "blue-theme", "red-theme", "night-theme","purple-theme","orange-theem"]
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .option-box.font-options
            h4 Font Option
            - var fonts = ["Open", "Bokor", "Pacifico", "Dancing","Roboto"]
                select.form-control
                    each font in fonts
                        option(value=font)=font + " Font"
        .option-box.option-title 
            h4 Sidbar Options
